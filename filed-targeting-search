FROM tiangolo/uwsgi-nginx:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get -y install unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 47222
EXPOSE 47222
ENV PYTHON_SOLUTION_PATH=''
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/uwsgi.ini

COPY ./TargetingSearch/targeting_search /app

WORKDIR /app
RUN pip install --upgrade pip && pip3 install -r requirements.txt