FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 46351
EXPOSE 47251
ENV PYTHON_SOLUTION_PATH='/app'
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/Potter/FacebookProductCatalogs/BackgroundTasks/uwsgi.ini

# copy source files
COPY ./Potter/FacebookProductCatalogs/BackgroundTasks /app/Potter/FacebookProductCatalogs/BackgroundTasks
COPY ./Potter/FacebookProductCatalogs/Infrastructure /app/Potter/FacebookProductCatalogs/Infrastructure
COPY ./Core /app/Core

# copy requirements and uwsgi files
COPY ./requirements.txt /app/Potter/FacebookProductCatalogs/BackgroundTasks
COPY ./Potter/uwsgi.ini /app/Potter/FacebookProductCatalogs/BackgroundTasks

WORKDIR /app/Potter/FacebookProductCatalogs/BackgroundTasks
RUN pip install --upgrade pip && pip3 install -r requirements.txt