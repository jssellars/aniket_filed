FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 47550
EXPOSE 47550
ENV PYTHON_SOLUTION_PATH=''
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/GoogleTuring/Api/uwsgi.ini

COPY ./GoogleTuring /app/GoogleTuring
COPY ./Core /app/Core
COPY ./requirements.txt /app/GoogleTuring/Api
COPY ./GoogleTuring/uwsgi.ini /app/GoogleTuring/Api

WORKDIR /app/GoogleTuring/Api
RUN pip install --upgrade pip && pip3 install -r requirements.txt