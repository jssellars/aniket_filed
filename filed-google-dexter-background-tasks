FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y unixodbc-dev

FROM build
ARG STAGE
ENV LISTEN_PORT 47301
EXPOSE 43701
ENV PYTHON_SOLUTION_PATH='/app'
ENV PYTHON_ENV=${STAGE}

# copy source files
COPY ./GoogleDexter/BackgroundTasks /app/GoogleDexter/BackgroundTasks/
COPY ./GoogleDexter/Engine /app/GoogleDexter/Engine/
COPY ./GoogleDexter/Infrastructure /app/GoogleDexter/Infrastructure/
COPY ./Core /app/Core

# copy requirements and uwsgi files
COPY ./requirements.txt /app/GoogleDexter/BackgroundTasks/
COPY ./GoogleDexter/uwsgi.ini /app/GoogleDexter/BackgroundTasks/

WORKDIR /app/GoogleDexter/BackgroundTasks
RUN pip install --upgrade pip && pip3 install -r requirements.txt