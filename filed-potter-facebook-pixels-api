FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 47250
EXPOSE 47250
ENV PYTHON_SOLUTION_PATH='/app'
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/Potter/FacebookPixels/Api/uwsgi.ini

# copy source files
COPY ./Potter/FacebookPixels/Api /app/Potter/FacebookPixels/Api
COPY ./Potter/FacebookPixels/Infrastructure /app/Potter/FacebookPixels/Infrastructure
COPY ./Core /app/Core

# copy requirements and uwsgi files
COPY ./requirements.txt /app/Potter/FacebookPixels/Api
COPY ./Potter/uwsgi.ini /app/Potter/FacebookPixels/Api

WORKDIR /app/Potter/FacebookPixels/Api
RUN pip install --upgrade pip && pip3 install -r requirements.txt