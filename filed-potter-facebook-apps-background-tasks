FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 47231
EXPOSE 47231
ENV PYTHON_SOLUTION_PATH=''
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/Potter/FacebookApps/BackgroundTasks/uwsgi.ini

# copy source files
COPY ./Potter/FacebookApps/BackgroundTasks /app/Potter/FacebookApps/BackgroundTasks
COPY ./Potter/FacebookApps/Infrastructure /app/Potter/FacebookApps/Infrastructure
COPY ./Core /app/Core

# copy requirements and uwsgi files
COPY ./requirements.txt /app/Potter/FacebookApps/BackgroundTasks
COPY ./Potter/uwsgi.ini /app/Potter/FacebookApps/BackgroundTasks

WORKDIR /app/Potter/FacebookApps/BackgroundTasks
RUN pip install --upgrade pip && pip3 install -r requirements.txt