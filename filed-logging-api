FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 40666
EXPOSE 40666
ENV PYTHON_SOLUTION_PATH='/app'
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/Logging/Api/uwsgi.ini

# copy source files
COPY ./Logging/Api /app/Logging/Api
COPY ./Logging/Infrastructure /app/Logging/Infrastructure
COPY ./Core /app/Core

# copy requirements and uwsgi files
COPY ./requirements.txt /app/Logging/Api
COPY ./Logging/uwsgi.ini /app/Logging/Api

WORKDIR /app/Logging/Api
RUN pip install --upgrade pip && pip3 install -r requirements.txt