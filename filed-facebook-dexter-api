FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y --no-install-recommends apt-utils && apt-get install -y unixodbc-dev

FROM build

ARG STAGE
ENV LISTEN_PORT 43700
EXPOSE 43700
ENV PYTHON_SOLUTION_PATH='/app'
ENV PYTHON_ENV=${STAGE}
ENV UWSGI_INI /app/FacebookDexter/Api/uwsgi.ini

# copy source files
COPY ./FacebookDexter/Api /app/FacebookDexter/Api
COPY ./FacebookDexter/Infrastructure /app/FacebookDexter/Infrastructure
COPY ./Core /app/Core

# copy requirements & uwsgi files
COPY ./requirements.txt /app/FacebookDexter/Api
COPY ./FacebookDexter/uwsgi.ini /app/FacebookDexter/Api

WORKDIR /app/FacebookDexter/Api
RUN pip install --upgrade pip && pip3 install -r requirements.txt