FROM tiangolo/uwsgi-nginx-flask:python3.7 AS build
RUN apt-get update && apt-get install -y unixodbc-dev

FROM build

ENV LISTEN_PORT 47241
EXPOSE 47241
ENV PYTHON_SOLUTION_PATH=''
ENV PYTHON_ENV=dev
ENV UWSGI_INI /app/Potter/FacebookAudiences/BackgroundTasks/uwsgi.ini

COPY ./Potter /app/Potter
COPY ./Core /app/Core
COPY ./requirements.txt /app/Potter/FacebookAudiences/BackgroundTasks

WORKDIR /app/Potter/FacebookAudiences/BackgroundTasks
RUN pip install --upgrade pip && pip3 install -r requirements.txt